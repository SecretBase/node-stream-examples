{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2016"
  }
}
